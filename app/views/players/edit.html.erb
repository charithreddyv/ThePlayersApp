<h1>Edit <%= @Player.first_name %>'s profile </h1>


<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<p> <%= e %></p>
<% end %>
<% end %>


<form action="/players/<%= @Player.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
	<p>
		<label><b>First Name</b></label>
		<input type ="text" name="player[first_name]" value="<%= @Player.first_name %>">
	</p>
	<p>
		<label><b>Last Name</b></label>
		<input type="text" name="player[last_name]" value="<%= @Player.last_name %>">
	</p>
	<input type="submit" value="update">
	
</form>

<a href="/players"> Go back </a>